extends layout
block style
    style
        .form-horizontal .controls {
            margin-bottom: 10px;
        }
block login
    form.form-horizontal(method="post")
        fieldset
            legend 用户注册
            +control-group("username","用户名","text",true)
            +control-group("password","口令","password")
            .control-group
                .controls
                    label.checkbox(style="margin-left:80px")
                        input(type="checkbox",name="login_enable",value=1)
                        | 记住我
                    button(type="submit",style="position:absolute;margin-top:-30px").btn.btn-primary 登录
